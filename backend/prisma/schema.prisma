generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ChatSession {
  id        String   @id @default(cuid())
  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  messages  Message[]
  
  @@map("chat_sessions")
}

model Message {
  id        String   @id @default(cuid())
  content   String
  role      String   // 'user' | 'agent'
  agentType String?  // 'elementary_student' | 'chef' | 'funny_person' | etc.
  agentName String?
  createdAt DateTime @default(now())
  
  sessionId String
  session   ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  @@map("messages")
}

model Agent {
  id          String  @id @default(cuid())
  name        String
  type        String  @unique
  description String
  personality String
  systemPrompt String @db.Text
  avatar      String?
  isActive    Boolean @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("agents")
}